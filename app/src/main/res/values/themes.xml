<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PriceGauge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>

        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>

        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
    </style>

    <style name="Theme.PriceGauge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PriceGauge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PriceGauge.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>